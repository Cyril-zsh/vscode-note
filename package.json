{
    "name": "vscode-note",
    "displayName": "vscode-note",
    "description": "a simple note extension. note data is saved in file.",
    "version": "0.2.1",
    "publisher": "shinhwagk",
    "engines": {
        "vscode": "^1.30.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shinhwagk/vscode-note"
    },
    "categories": [
        "Other"
    ],
    "license": "MIT",
    "activationEvents": [
        "onView:vsnoteExplorer"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vsnote-explorer",
                    "title": "VSNote",
                    "icon": "assets/note.svg"
                }
            ]
        },
        "views": {
            "vsnote-explorer": [
                {
                    "id": "vsnoteExplorer",
                    "name": "domain"
                },
                {
                    "id": "vsnoteFilesExplorer",
                    "name": "files",
                    "when": "extension.files"
                },
                {
                    "id": "vsnoteDocsExplorer",
                    "name": "docs",
                    "when": "extension.docs"
                },
                {
                    "id": "vsnoteNoteEditExplorer",
                    "name": "note edit",
                    "when": "extension.note.edit"
                }
            ]
        },
        "menus": {
            "view/title": [
        
            ],
            "view/item/context": [
                {
                    "command": "vscode-note.note.create",
                    "when": "view == vsnoteExplorer",
                    "group": "new"
                },
                {
                    "command": "vscode-note.domain.create",
                    "when": "view == vsnoteExplorer",
                    "group": "new"
                },
                {
                    "command": "vscode-note.domain.rename",
                    "title": "New Domain",
                    "group": "edit"
                }
            ]
        },
        "configuration": [
            {
                "title": "VScode Note",
                "properties": {
                    "vsnote.dbpath": {
                        "type": "string",
                        "default": "~/.vscode-note",
                        "description": "data location"
                    }
                }
            }
        ],
        "commands": [
            {
                "command": "vscode-note.note.create",
                "title": "New Note"
            },
            {
                "command": "vscode-note.domain.create",
                "title": "New Domain"
            },{
                "command": "vscode-note.domain.rename",
                "title": "Rname"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn lint:all && yarn compile",
        "compile": "webpack --mode production --config webpack.config.ts",
        "compile:web": "webpack --mode development --config webpack.webview.ts",
        "watch": "webpack --mode development --config webpack.config.ts --watch",
        "watch:dev": "webpack --mode development --config webpack.config.ts --watch",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "jest",
        "tslint:check": "tslint -c ./tslint.json ./src/**/*.ts",
        "watch-webview": "webpack --mode development --config webpack.config.webview.ts --watch",
        "tslint": "tslint -p .",
        "lint:prettier": "prettier --write src/** test/**",
        "lint:all": "yarn tslint && yarn lint:prettier && yarn tslint:check"
    },
    "devDependencies": {
        "@babel/core": "^7.2.2",
        "@babel/preset-react": "^7.0.0",
        "@types/clean-webpack-plugin": "^0.1.2",
        "@types/copy-webpack-plugin": "^4.4.2",
        "@types/fs-extra": "^5.0.4",
        "@types/html-webpack-plugin": "^3.2.0",
        "@types/jest": "^23.3.12",
        "@types/js-yaml": "^3.11.4",
        "@types/node": "^10.12.18",
        "@types/object-path": "^0.11.0",
        "@types/react": "^16.7.18",
        "@types/react-dom": "^16.0.11",
        "@types/rimraf": "^2.0.2",
        "@types/untildify": "^3.0.0",
        "@types/webpack": "^4.4.22",
        "babel-loader": "^8.0.5",
        "clean-webpack-plugin": "^1.0.0",
        "copy-webpack-plugin": "^4.6.0",
        "css-loader": "^2.1.0",
        "jest": "^23.6.0",
        "node-sass": "^4.11.0",
        "prettier": "^1.15.3",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "ts-jest": "^23.10.5",
        "ts-loader": "^5.3.3",
        "ts-node": "^7.0.1",
        "tslint": "^5.12.0",
        "tslint-config-prettier": "^1.17.0",
        "tslint-microsoft-contrib": "^6.0.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.2.2",
        "vscode": "^1.1.26",
        "webpack": "^4.28.4",
        "webpack-cli": "^3.2.1"
    },
    "dependencies": {
        "vscode": "^1.1.26",
        "fs-extra": "^7.0.1",
        "js-yaml": "^3.12.1",
        "object-path": "^0.11.4",
        "react": "^16.7.0",
        "react-dom": "^16.7.0",
        "rimraf": "^2.6.3",
        "untildify": "^3.0.3"
    }
}
