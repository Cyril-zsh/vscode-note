{
    "name": "vscode-note",
    "displayName": "vscode-note",
    "description": "",
    "version": "0.0.1",
    "publisher": "shinhwagk",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": [
            {
                "title": "VScode Note",
                "properties": {
                    "vsnote.dbpath": {
                        "type": "string",
                        "default": "~/.vscode-note",
                        "description": ""
                    },
                    "vsnote.updateStrategy": {
                        "type": "string",
                        "enum": [
                            "LATEST",
                            "SEMVER"
                        ],
                        "default": "LATEST",
                        "description": "what strategy you want to use to update your package.json"
                    }
                }
            }
        ],
        "commands": []
    },
    "scripts": {
        "vscode:prepublish": "npm run tslint-check && npm run compile",
        "compile": "webpack --mode development --config webpack.config.ts",
        "watch": "webpack --mode development --config webpack.config.ts --watch",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "rimraf ./out/test && tsc -p ./ && jest --coverage",
        "tslint-check": "tslint -c ./tslint.json ./src/**/*.ts"
    },
    "devDependencies": {
        "@types/clean-webpack-plugin": "^0.1.2",
        "@types/fs-extra": "^5.0.4",
        "@types/jest": "^23.3.11",
        "@types/node": "^10.12.18",
        "@types/object-path": "^0.11.0",
        "@types/rimraf": "^2.0.2",
        "@types/untildify": "^3.0.0",
        "@types/webpack": "^4.4.22",
        "clean-webpack-plugin": "^1.0.0",
        "jest": "^23.6.0",
        "ts-jest": "^23.10.5",
        "ts-loader": "^5.3.3",
        "ts-node": "^7.0.1",
        "tslint": "^5.12.0",
        "typescript": "^3.2.2",
        "vscode": "^1.1.26",
        "webpack": "^4.28.3",
        "webpack-cli": "^3.2.0"
    },
    "dependencies": {
        "fs-extra": "^7.0.1",
        "object-path": "^0.11.4",
        "rimraf": "^2.6.3",
        "untildify": "^3.0.3"
    }
}
