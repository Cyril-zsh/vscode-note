{
    "name": "vscode-note",
    "displayName": "vscode-note",
    "description": "",
    "version": "0.0.1",
    "publisher": "shinhwagk",
    "engines": {
        "vscode": "^1.30.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shinhwagk/vscode-note"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:vsnoteExplorer"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "vsnote-explorer",
                    "title": "VSNote",
                    "icon": "public/note.svg"
                }
            ]
        },
        "views": {
            "vsnote-explorer": [
                {
                    "id": "vsnoteExplorer",
                    "name": "exporer"
                }
            ]
        },
        "configuration": [
            {
                "title": "VScode Note",
                "properties": {
                    "vsnote.dbpath": {
                        "type": "string",
                        "default": "~/.vscode-note",
                        "description": ""
                    },
                    "vsnote.updateStrategy": {
                        "type": "string",
                        "enum": [
                            "LATEST",
                            "SEMVER"
                        ],
                        "default": "LATEST",
                        "description": "what strategy you want to use to update your package.json"
                    }
                }
            }
        ],
        "commands": []
    },
    "scripts": {
        "vscode:prepublish": "yarn tslint-check && yarn compile",
        "compile": "webpack --mode production --config webpack.production.ts",
        "watch": "webpack --mode development --config webpack.production.ts --watch",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "jest",
        "tslint-check": "tslint -c ./tslint.json ./src/**/*.ts",
        "watch-webview": "webpack --mode development --config webpack.config.webview.ts --watch"
    },
    "devDependencies": {
        "@babel/core": "^7.2.2",
        "@babel/preset-react": "^7.0.0",
        "@types/clean-webpack-plugin": "^0.1.2",
        "@types/copy-webpack-plugin": "^4.4.2",
        "@types/fs-extra": "^5.0.4",
        "@types/html-webpack-plugin": "^3.2.0",
        "@types/jest": "^23.3.12",
        "@types/node": "^10.12.18",
        "@types/object-path": "^0.11.0",
        "@types/react": "^16.7.18",
        "@types/react-dom": "^16.0.11",
        "@types/rimraf": "^2.0.2",
        "@types/untildify": "^3.0.0",
        "@types/webpack": "^4.4.22",
        "babel-loader": "^8.0.5",
        "clean-webpack-plugin": "^1.0.0",
        "copy-webpack-plugin": "^4.6.0",
        "html-webpack-plugin": "^3.2.0",
        "jest": "^23.6.0",
        "ts-jest": "^23.10.5",
        "ts-loader": "^5.3.3",
        "ts-node": "^7.0.1",
        "tslint": "^5.12.0",
        "typescript": "^3.2.2",
        "vscode": "^1.1.26",
        "webpack": "^4.28.1",
        "webpack-cli": "^3.2.1"
    },
    "dependencies": {
        "fs-extra": "^7.0.1",
        "object-path": "^0.11.4",
        "react": "^16.7.0",
        "react-dom": "^16.7.0",
        "rimraf": "^2.6.3",
        "untildify": "^3.0.3"
    }
}
