{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        "strict": true, 
        "noUnusedLocals": true, 
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noUnusedParameters": true, 
        "noImplicitAny": true,
    },
    "plugins": [
        {
          "name": "typescript-tslint-plugin"
        }
      ],
    "include": [
        "src"
    ]
}