{
    "files.exclude": {
        "node_modules": false,
        "out": false
    },
    "search.exclude": {
        "node_modules": false,
        "out": true
    },

    "typescript.tsc.autoDetect": "off",
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.formatOnSave": true,
    "tslint.autoFixOnSave": true,
    "npm.packageManager": "yarn"
}
